{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "preserve",

    /* Module System */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Build */
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,

    /* Paths & Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Types */
    "typeRoots": ["./types", "./node_modules/@types"],

    /* Next.js */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],

  "exclude": ["node_modules"]
}
